<window id="133">
<defaultcontrol>401</defaultcontrol>
<allowoverlay>no</allowoverlay>

<animation type="WindowOpen" reversible="false">
	<effect type="zoom" start="80" end="100" center="640,360" delay="200" easing="out" tween="back" time="300" />
	<effect type="fade" delay="200" start="0" end="100" time="300" />
</animation>

<animation type="WindowClose" reversible="false">	
	<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" delay="2000" />
	<effect type="fade" start="100" end="0" time="300" delay="2000" />
</animation>





