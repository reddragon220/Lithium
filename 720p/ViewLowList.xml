<includes>	
	<include name="low_list">
		<control type="group">
			<include>preferences_animation</include>
			<visible>Control.IsVisible(50)</visible>
			<posx>0</posx>
			<posy>472</posy>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>248</height>
				<texture>lowlist/low_list_bg.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<visible>
					container.content(tvshows) | container.content(movies) | container.content(episodes) | container.content(songs)
				</visible>
				<posx>1011</posx>
				<posy>1</posy>
				<width>177</width>
				<height>247</height>
				<texture>lowlist/ratings_overlay.png</texture>
				<aspectratio>stretch</aspectratio> 
			</control>
			<control type="image">
				<posx>320</posx>
				<posy>0</posy>
				<width>960</width>
				<height>247</height>
				<texture>lowlist/overlay.png</texture>
				<aspectratio>stretch</aspectratio> 
			</control>
			
			<!-- Select List -->
			<control type="group">
				<control type="panel" id="50">
					<animation type="Conditional" condition="Control.hasfocus(581) + Skin.HasSetting(horizontal_scroll)">
						<effect type="slide" end="0,-20" center="auto" time="200"/>
					</animation>

					<viewtype label="List">list</viewtype>
					<include condition="Skin.HasSetting(horizontal_scroll)">orientation_horizontal</include>
				 	<include condition="!Skin.HasSetting(horizontal_scroll)">orientation_vertical</include>

					<posx>320</posx>
					<posy>1</posy>

					<width>960</width>
					<height>250</height>
					
					<ondown>101</ondown>
					
					<focusposition>3</focusposition>

					<itemlayout width="960" height="50">
						<control type="image">
							<visible>Container.Content(episodes) | Container.Content(seasons) | Container.Content(tvshows) | Container.Content(movies) | Container.Content(albums) | Container.Content(songs) | Container.Content(musicvideos)</visible>
							<posx>693</posx>
							<posy>8</posy>
							<width>172</width>
							<height>30</height>
							<info>ListItem.StarRating</info>
							<aspectratio>keep</aspectratio>
							<align>center</align>
						</control>
						<control type="group">
							<visible>
								!container.content(tvshows) + !container.content(movies) + !container.content(episodes) + !container.content(songs)
							</visible>
							<control type="label">
								<posx>63</posx>
								<posy>8</posy>
								<width>832</width>
								<info>ListItem.label</info>
								<font>Large</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="group">
							<visible>!container.content(episodes)</visible>
							<control type="label">
								<posx>63</posx>
								<posy>8</posy>
								<width>626</width>
								<info>ListItem.label</info>
								<font>Large</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="group">
							<visible>container.content(episodes)</visible>
							<control type="label">
								<posx>63</posx>
								<posy>8</posy>
								<width>626</width>
								<label>$INFO[ListItem.Season].$INFO[ListItem.Episode] $INFO[ListItem.title]</label>
								<font>Large</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>			
						<control type="image">
							<posx>0</posx>
							<posy>48</posy>
							<width>960</width>
							<height>2</height>
							<texture>lowlist/divider.png</texture>
						</control>
					</itemlayout>
					<focusedlayout width="960" height="50">
						<control type="image">
							<posy>0</posy>
							<width>960</width>
							<height>48</height>
							<texture>lowlist/highlight.png</texture>
						</control>
						<control type="image">
							<visible>
								container.content(tvshows) | container.content(movies) | container.content(episodes) | container.content(songs)
							</visible>
							<posx>689</posx>
							<posy>0</posy>
							<width>181</width>
							<height>48</height>
							<texture>lowlist/highlight_ratings_overlay.png</texture>
						</control>
						<control type="image">
							<visible>
								container.content(tvshows) | container.content(movies) | container.content(episodes) | container.content(songs)
							</visible>
							<posx>693</posx>
							<posy>8</posy>
							<width>172</width>
							<height>30</height>
							<info>ListItem.StarRating</info>
							<aspectratio>keep</aspectratio>
							<align>center</align>
						</control>
						<control type="group">
							<visible>
								!container.content(tvshows) + !container.content(movies) + !container.content(episodes) + !container.content(songs)
							</visible>
							<control type="label">
								<posx>63</posx>
								<posy>6</posy>
								<width>832</width>
								<info>ListItem.label</info>
								<font>Large</font>
								<textcolor>7f000000</textcolor>
								<scroll>true</scroll>
							</control>
							<control type="label">
								<posx>63</posx>
								<posy>8</posy>
								<width>832</width>
								<info>ListItem.label</info>
								<font>Large</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>true</scroll>
							</control>
						</control>
						
						<control type="group">
							<visible>!container.content(episodes) + !container.content(albums)</visible>
							<control type="label">
								<posx>63</posx>
								<posy>6</posy>
								<width>626</width>
								<info>ListItem.label</info>
								<font>Large</font>
								<textcolor>7f000000</textcolor>
								<scroll>false</scroll>
							</control>
							<control type="label">
								<posx>63</posx>
								<posy>8</posy>
								<width>626</width>
								<info>ListItem.label</info>
								<font>Large</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="group">
							<visible>container.content(episodes)</visible>
							<control type="label">
								<posx>63</posx>
								<posy>6</posy>
								<width>626</width>
								<label>$INFO[ListItem.Season].$INFO[ListItem.Episode] $INFO[ListItem.title]</label>
								<font>Large</font>
								<textcolor>7f000000</textcolor>
								<scroll>false</scroll>
							</control>
							<control type="label">
								<posx>63</posx>
								<posy>8</posy>
								<width>626</width>
								<label>$INFO[ListItem.Season].$INFO[ListItem.Episode] $INFO[ListItem.title]</label>
								<font>Large</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>48</posy>
							<width>960</width>
							<height>2</height>
							<texture>lowlist/divider.png</texture>
						</control>
					</focusedlayout>
				</control>
			</control>

			<!-- Thumbnail -->
			<control type="group">
				<animation type="Conditional" condition="Container.content(episodes)">
					<effect type="slide" end="0,-15" center="auto" time="0"/>
				</animation>
				<animation effect="slide" start="-302,0" end="0,0" center="auto" time="200">WindowOpen</animation>
							
				<control type="image">
					<posx>19</posx>
					<posy>213</posy>
					<width>283</width>
					<height>411</height>
					<info>ListItem.thumb</info>
					<texture flipy="true" diffuse="lowlist/thumb_mask_reflection.png"></texture>
					<bordersize>5</bordersize>
					<aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
				</control>
				<control type="image">
					<posx>19</posx>
					<posy>-189</posy>
					<width>283</width>
					<height>411</height>
					<info>ListItem.thumb</info>
					<texture diffuse="lowlist/thumb_mask.png"></texture>
					<bordertexture border="5">lowlist/thumb_shadow.png</bordertexture>
					<bordersize>5</bordersize>
					<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
				</control>
			</control>
			<!-- Directionals -->
			<control type="image">
				<posx>320</posx>
				<posy>101</posy>
				<width>48</width>
				<height>48</height>
				<texture>lowlist/arrow_left.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>1232</posx>
				<posy>101</posy>
				<width>48</width>
				<height>48</height>
				<texture>lowlist/arrow_right.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>
	</include>
</includes>