<includes>	
	<include name="info_low_list_label_horizontal_position">
		<posx>63</posx>
	</include>
	<include name="info_low_list_label_vertical_position">
		<posx>15</posx>
	</include>
	<include name="info_low_list_horizontal_orientaiton">
		<orientation>horizontal</orientation>
	</include>
	<include name="info_low_list_vertical_orientation">
		<orientation>vertical</orientation>
		<onright>101</onright>
	</include>
	
	<include name="info_low_list">
		<control type="group">
			<include>preferences_animation</include>
			<visible>Control.IsVisible(51)</visible>
			<posx>0</posx>
			<posy>472</posy>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>248</height>
				<texture>lowlist/info/low_list_bg.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>320</posx>
				<posy>0</posy>
				<width>576</width>
				<height>247</height>
				<texture>lowlist/info/overlay.png</texture>
				<aspectratio>stretch</aspectratio> 
			</control>

			<control type="textbox">
				<posx>907</posx>
				<posy>1</posy>
				<width>370</width>
				<height>247</height>
				<label>$INFO[listitem.Plot]</label>
				<font>Mini</font>
				<textcolor>ffe8e8db</textcolor>
				<autoscroll delay="6000" time="3000" repeat="10000"></autoscroll>
			</control>
			
			<!-- Select List -->
			<control type="group">
				<control type="panel" id="51">
					<animation type="Conditional" condition="Control.hasfocus(581) + Skin.HasSetting(horizontal_scroll)">
						<effect type="slide" end="0,-20" center="auto" time="200"/>
					</animation>

					<viewtype label="Info Low List">list</viewtype>
					<include condition="Skin.HasSetting(info_low_list_horizontal_scroll)">info_low_list_horizontal_orientaiton</include>
				 	<include condition="!Skin.HasSetting(info_low_list_horizontal_scroll)">info_low_list_vertical_orientation</include>

					<posx>320</posx>
					<posy>1</posy>

					<width>576</width>
					<height>250</height>
					
					<ondown>101</ondown>
					
					<focusposition>3</focusposition>

					<itemlayout width="576" height="50">
						<control type="group">
							<visible>
								!container.content(tvshows) + !container.content(movies) + !container.content(episodes) + !container.content(songs)
							</visible>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>8</posy>
								<width>832</width>
								<info>ListItem.label</info>
								<font>Medium</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="group">
							<visible>!container.content(episodes)</visible>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>8</posy>
								<width>626</width>
								<info>ListItem.label</info>
								<font>Medium</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="group">
							<visible>container.content(episodes)</visible>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>8</posy>
								<width>626</width>
								<label>$INFO[ListItem.Season].$INFO[ListItem.Episode] $INFO[ListItem.title]</label>
								<font>Medium</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>			
						<control type="image">
							<posx>0</posx>
							<posy>48</posy>
							<width>576</width>
							<height>2</height>
							<texture>lowlist/info/divider.png</texture>
						</control>
					</itemlayout>
					<focusedlayout width="576" height="50">
						<control type="image">
							<posy>0</posy>
							<width>576</width>
							<height>48</height>
							<texture>lowlist/highlight.png</texture>
						</control>
						<control type="group">
							<visible>
								!container.content(tvshows) + !container.content(movies) + !container.content(episodes) + !container.content(songs)
							</visible>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>6</posy>
								<width>832</width>
								<info>ListItem.label</info>
								<font>Medium</font>
								<textcolor>7f000000</textcolor>
								<scroll>true</scroll>
							</control>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>8</posy>
								<width>832</width>
								<info>ListItem.label</info>
								<font>Medium</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>true</scroll>
							</control>
						</control>
						<control type="group">
							<visible>!container.content(episodes) + !container.content(albums)</visible>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>6</posy>
								<width>626</width>
								<info>ListItem.label</info>
								<font>Medium</font>
								<textcolor>7f000000</textcolor>
								<scroll>false</scroll>
							</control>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>8</posy>
								<width>626</width>
								<info>ListItem.label</info>
								<font>Medium</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="group">
							<visible>container.content(episodes)</visible>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>6</posy>
								<width>626</width>
								<label>$INFO[ListItem.Season].$INFO[ListItem.Episode] $INFO[ListItem.title]</label>
								<font>Medium</font>
								<textcolor>7f000000</textcolor>
								<scroll>false</scroll>
							</control>
							<control type="label">
								<include condition="Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_horizontal_position</include>
								<include condition="!Skin.HasSetting(low_list_horizontal_scroll)">info_low_list_label_vertical_position</include>
								<posy>8</posy>
								<width>626</width>
								<label>$INFO[ListItem.Season].$INFO[ListItem.Episode] $INFO[ListItem.title]</label>
								<font>Medium</font>
								<textcolor>ffe8e8db</textcolor>
								<scroll>false</scroll>
							</control>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>48</posy>
							<width>576</width>
							<height>2</height>
							<texture>lowlist/info/divider.png</texture>
						</control>
					</focusedlayout>
				</control>
			</control>

			<!-- Thumbnail -->
			<control type="group">
				<animation type="Conditional" condition="Container.content(episodes)">
					<effect type="slide" end="0,-15" center="auto" time="0"/>
				</animation>
				<animation effect="slide" start="-302,0" end="0,0" center="auto" time="200">WindowOpen</animation>
							
				<control type="image">
					<posx>19</posx>
					<posy>213</posy>
					<width>283</width>
					<height>411</height>
					<info>ListItem.thumb</info>
					<texture flipy="true" diffuse="lowlist/thumb_mask_reflection.png"></texture>
					<bordersize>5</bordersize>
					<aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
				</control>
				<control type="image">
					<posx>19</posx>
					<posy>-189</posy>
					<width>283</width>
					<height>411</height>
					<info>ListItem.thumb</info>
					<texture diffuse="lowlist/thumb_mask.png"></texture>
					<bordertexture border="5">lowlist/thumb_shadow.png</bordertexture>
					<bordersize>5</bordersize>
					<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
				</control>
			</control>
			<!-- Directionals -->
			<control type="group">
				<visible>Skin.HasSetting(info_low_list_horizontal_scroll)</visible>
				<control type="image">
					<posx>320</posx>
					<posy>101</posy>
					<width>48</width>
					<height>48</height>
					<texture>lowlist/arrow_left.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>848</posx>
					<posy>101</posy>
					<width>48</width>
					<height>48</height>
					<texture>lowlist/arrow_right.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>
			<control type="group">
				<visible>!Skin.HasSetting(info_low_list_horizontal_scroll)</visible>
				<control type="image">
					<posx>848</posx>
					<posy>1</posy>
					<width>48</width>
					<height>48</height>
					<texture>common/up_arrow.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image">
					<posx>848</posx>
					<posy>201</posy>
					<width>48</width>
					<height>48</height>
					<texture>common/down_arrow.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
			</control>
			
		</control>
	</include>
</includes>