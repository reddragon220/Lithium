<window id="4">
<defaultcontrol>50</defaultcontrol>
<allowoverlay>no</allowoverlay>
  
<controls>
	<include>background</include>


	<control type="group" id="50">
		<posx>36</posx>
		<posy>82</posy>
		<control type="image">
			<width>1210</width>
			<height>556</height>
			<texture>Zen/panes/settings/settings_bg.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>
		
		<control type="list" id="2">
			<description>Settings Wraplist</description>
			<posx>0</posx>
			<posy>30</posy>
			<width>244</width>
			<height>556</height>
			<aligny>center</aligny>
			<orientation>vertical</orientation>
			<visible>-</visible>

			<onup>100</onup>                       <!-- To move between controls insert control id -->				


			<scrolltime>200</scrolltime>
			
			<!-- Unselected Items -->
			<itemlayout height="50" width="327">
				<control type="label">
					<posx>14</posx>
					<posy>10</posy>
					<width>237</width>  			<!-- can't have height defined in the block -->
					<info>ListItem.Label</info> 
					<font>Large</font>
				    <shadowcolor>5f000000</shadowcolor>								
					<textcolor>7fffffff</textcolor> <!-- First two are alpha transparency-->
													<!-- last 6 are regular  rrggbb      -->
					<scroll>false</scroll>          
					<align>left</align>
				</control>
				<control type="image">
					<posx>11</posx>
					<posy>52</posy>
					<height>2</height>
					<width>223</width>
					<texture>Zen/elements/settings/small_divider.png</texture>
				</control>
			</itemlayout>

			<!-- Selected Item -->
			<focusedlayout height="50" width="237">
				<control type="image">
					<visible>!control.hasfocus(2)</visible>
					<posx>4</posx>
					<posy>2</posy>
					<height>52</height>
					<width>237</width>
					<texture>Zen/elements/settings/small_highlight_unfocused.png</texture>
				</control>
				<control type="image">
					<visible>control.hasfocus(2)</visible>
					<posx>4</posx>
					<posy>2</posy>
					<height>52</height>
					<width>237</width> 
					<texture>Zen/elements/settings/small_highlight_focused.png</texture>
				</control>	
				<control type="label">
					<posx>14</posx>
					<posy>10</posy>
					<width>237</width>
					<info>ListItem.Label</info>
					<font>Large</font>
					<textcolor>ffe8e8db</textcolor>
					<shadowcolor>7f000000</shadowcolor>								
					<align>left</align>
				</control>
				<control type="image">
					<posx>11</posx>
					<posy>52</posy>
					<height>2</height>
					<width>223</width>
					<texture>Zen/elements/settings/small_divider.png</texture>
				</control>
			</focusedlayout>

			<!-- Menu Items -->
			<content>
				<item id="12">
					<description>Lithium</description>
					<label>Lithium</label>
					<onclick>activatewindow(56)</onclick>
				</item>
				<item id="1">
					<description>Videos</description>
					<label>$LOCALIZE[3]</label>
					<onclick>activatewindow(MyVideosSettings)</onclick>
				</item>
				<item id="2">
					<description>Music</description>
					<label>$LOCALIZE[2]</label>
					<onclick>activatewindow(MyMusicSettings)</onclick>
				</item> 
				<item id="3">
					<description>Pictures</description>
					<label>$LOCALIZE[1]</label>
					<onclick>activatewindow(MyPicturesSettings)</onclick>
				</item>
				<item id="4">
					<description>Programs</description>
					<label>$LOCALIZE[0]</label>
					<onclick>activatewindow(MyProgramsSettings)</onclick>
				</item>
				<item id="5">
					<description>Weather</description>
					<label>$LOCALIZE[8]</label>
					<onclick>activatewindow(MyWeatherSettings)</onclick>
				</item>
				<item id="8">
					<description>Network</description>
					<label>$LOCALIZE[705]</label>
					<onclick>activatewindow(NetworkSettings)</onclick>
				</item>
				<item id="6">
					<description>System</description>
					<label>$LOCALIZE[13000]</label>
					<onclick>activatewindow(SystemSettings)</onclick>
				</item>
				<item id="7">
					<description>Appearance</description>
					<label>$LOCALIZE[480]</label>
					<onclick>activatewindow(AppearanceSettings)</onclick>
				</item>
				<item id="9">
					<description>Profiles</description>
					<label>$LOCALIZE[13200]</label>
					<onclick>xbmc.activatewindow(34)</onclick>
				</item>
			</content>
		</control>
		
		
		
		<control type="image">
			<width>1210</width>
			<height>556</height>
			<texture>Zen/panes/common/center_gradient.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>
		<control type="image">
			<width>1210</width>
			<height>556</height>
			<texture>Zen/panes/common/center_outline.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>
		
	</control>

	<control type="image">
		<width>1280</width>
		<height>720</height>
		<texture>Zen/elements/common/corners.png</texture>
		<aspectratio>stretch</aspectratio>
	</control>

