<window id="2006">
<allowoverlay>no</allowoverlay>
<controls>
	<control type="visualisation" id="2">
		<description>visualisation</description>
		<visible>Visualisation.Enabled</visible>
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
	</control>
	
	<control type="group" id="3">
		<visible>!Visualisation.Enabled</visible>
		
		<control type="multiimage">
		      <description>My first slideshow control</description>
		      <posx>0</posx>
		      <posy>0</posy>
		      <width>1280</width>
		      <height>720</height>
		      <visible>true</visible>
		      <imagepath>Zen/panes/musicvisualisation/gradients</imagepath>
		      <info></info>
		      <timeperimage>20000</timeperimage>
		      <fadetime>5000</fadetime>
		      <randomize>true</randomize>
		      <loop>yes</loop>
		      <aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
			<width>1280</width>
			<height>720</height>
			<texture>Zen/panes/musicvisualisation/music_bg.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="group">
			<!-- ><animation type="WindowOpen">
				<effect type="rotatey" center="auto" start="0" end="360" time="1200" pulse="true"/>
			</animation> -->
			<control type="group">
				<posx>-150</posx>
				<control type="group">
					<animation effect="rotatey" center="auto" end="-16" time="0" condition="true">Conditional</animation>
					<control type="image">
						<posx>261</posx>
						<posy>201</posy>
			
						<info>MusicPlayer.Cover</info>
						<width>317</width>
						<height>317</height>
						<texture diffuse="Zen/elements/musicvisualisation/album_mask.png"></texture>
						<aspectratio>stretch</aspectratio>			
					</control>
					<control type="image">
						<posx>261</posx>
						<posy>517</posy>
						<width>317</width>
						<height>317</height>
						<info>MusicPlayer.Cover</info>
						<texture flipy="true" diffuse="Zen/elements/musicvisualisation/album_reflection_mask.png"/>
						<aspectratio>stretch</aspectratio> 
					</control>
				</control>
			</control>
			<control type="group">
				<posx>566</posx>
				<control type="label">
					<posy>269</posy>
					<posx>0</posx>
						
					<label>$INFO[MusicPlayer.Title]</label>
					<font>Title</font>
					<textcolor>ffe8e8db</textcolor>
					<align>left</align>
				</control>
				<control type="label">
					<posy>326</posy>
					<posx>0</posx>
						
					<label>$INFO[MusicPlayer.Album]</label>
					<font>Large</font>
					<textcolor>ffe8e8db</textcolor>
					<align>left</align>
				</control>
				<control type="label">
					<posy>376</posy>
					<posx>0</posx>
						
					<label>$INFO[MusicPlayer.Artist]</label>
					<font>Large</font>
					<textcolor>ffe8e8db</textcolor>
					<align>left</align>
				</control>
				<control type="progress">
					<posx>0</posx>
					<posy>424</posy>
					<width>423</width>
					<height>31</height>
					<visible>true</visible>
					<reveal>true</reveal>
					<texturebg>Zen/elements/musicvisualisation/progress_bg.png</texturebg>
					<midtexture>Zen/elements/musicvisualisation/progress_mid.png</midtexture>
					<lefttexture></lefttexture>
					<righttexture>-</righttexture>
					<overlaytexture>-</overlaytexture>
					<info>Player.Progress</info>
				</control>
			</control>
		</control>

		<control type="image">
			<width>1280</width>
			<height>720</height>
			<texture>Zen/elements/common/corners.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>
	</control>
	
</controls>
</window>
