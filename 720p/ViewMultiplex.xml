<includes>
	<include name="multiplex">
		<control type="image">
			<visible>Control.IsVisible(54)</visible>
		
			<posy>600</posy>
			<width>1280</width>
			<height>67</height>
			<texture>Zen/panes/multiplex/multiplex_bg.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>

		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			<posx>40</posx>
			<posy>328</posy>

			<!-- Select List -->
			<control type="fixedlist" id="54">
				<visible>
					!Window.IsActive(musicplaylist) + !Window.IsActive(musicfiles) + !Window.IsActive(musiclibrary)
					+ !Container.Content(albums) + !Container.Content(artists) + !Container.Content(songs)				
				</visible>
			
				<posx>-45</posx>
			    <posy>60</posy>
				<width>1280</width>
				<height>300</height>

				<ondown>-</ondown>
				<onup>100</onup>
				<onleft>-</onleft>
				<onright>-</onright>

			    <viewtype label="Multiplex">list</viewtype>
			    <orientation>horizontal</orientation>
			    <scrolltime>200</scrolltime>
			    <focusposition>3</focusposition>

				<itemlayout width="183" height="265">
					<control type="image">
						<posx>11</posx>
						<posy>250</posy>
						<width>170</width>
						<height>250</height>
						<info>ListItem.thumb</info>
						<texture flipy="true" diffuse="Zen/elements/multiplex/dvd/reflection_mask.png"/>
						<bordersize>6</bordersize>
						<aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
					</control>
					<control type="image">
						<posx>11</posx>
						<posy>12</posy>
						<width>170</width>
						<height>250</height>
						<info>ListItem.thumb</info>
						<texture diffuse="Zen/elements/cover/dvd/thumb_mask.png"></texture>
						<bordertexture border="6">Zen/elements/cover/dvd/thumb_shadow.png</bordertexture>
						<bordersize>6</bordersize>
						<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="183" height="265">
					<control type="image">
						<animation effect="zoom" end="117" center="auto" time="200">Focus</animation>
					
						<posx>11</posx>
						<posy>6</posy>
						<width>170</width>
						<height>250</height>
						<info>ListItem.thumb</info>
						<texture diffuse="Zen/elements/cover/dvd/thumb_mask.png"></texture>
						<bordertexture border="11">Zen/elements/cover/dvd/thumb_focus_overlay2.png</bordertexture>
						<bordersize>11</bordersize>
						<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
					</control>
				</focusedlayout>
			</control>
			<control type="fixedlist" id="54">
				<visible>
					Window.IsActive(musicplaylist) | Window.IsActive(musicfiles) | Window.IsActive(musiclibrary)
					| Container.Content(albums) | Container.Content(artists) | Container.Content(songs)
				</visible>
			
				<posx>-45</posx>
			    <posy>143</posy>
				<width>1280</width>
				<height>300</height>

				<ondown>-</ondown>
				<onup>100</onup>
				<onleft>-</onleft>
				<onright>-</onright>

			    <viewtype label="Multiplex">list</viewtype>
			    <orientation>horizontal</orientation>
			    <scrolltime>200</scrolltime>
			    <focusposition>3</focusposition>

				<itemlayout width="183" height="177">
					<control type="image">
						<posx>11</posx>
						<posy>170</posy>
						<width>170</width>
						<height>170</height>
						<info>ListItem.thumb</info>
						<texture flipy="true" diffuse="Zen/elements/multiplex/album/reflection_mask.png"/>
						<bordertexture border="6"></bordertexture>
						<bordersize>6</bordersize>
						<aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
					</control>
					<control type="image">
						<posx>11</posx>
						<posy>12</posy>
						<width>170</width>
						<height>170</height>
						<info>ListItem.thumb</info>
						<texture diffuse="Zen/elements/cover/album/thumb_mask.png"></texture>
						<bordertexture border="6">Zen/elements/cover/album/thumb_shadow.png</bordertexture>
						<bordersize>6</bordersize>
						<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="183" height="193">
					<control type="image">
						<animation effect="zoom" end="117" center="auto" time="200">Focus</animation>
						<posx>11</posx>
						<posy>12</posy>
						<width>170</width>
						<height>170</height>
						<info>ListItem.thumb</info>
						<texture diffuse="Zen/elements/cover/album/thumb_mask.png"></texture>
						<bordertexture border="11">Zen/elements/cover/album/thumb_focus_overlay.png</bordertexture>
						<bordersize>11</bordersize>
						<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
					</control>
				</focusedlayout>
			</control>
		</control>
		<!-- Footer Info -->
	</include>
</includes>