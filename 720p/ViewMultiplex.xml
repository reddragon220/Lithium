<includes>	
	<include name="multiplex">
		<control type="group">
			<include>preferences_animation</include>			
			<control type="image">
				<visible>Control.IsVisible(54)</visible>
		
				<posy>600</posy>
				<width>1280</width>
				<height>67</height>
				<texture>Zen/panes/multiplex/multiplex_bg.png</texture>
				<aspectratio>stretch</aspectratio> 
			</control>

			<control type="group">
			
				<visible>Control.IsVisible(54)</visible>
				<posx>40</posx>
				<posy>328</posy>
			
				<animation type="Conditional" condition="Control.hasfocus(541)">
					<effect type="slide" end="0,-30" center="auto" time="200"/>
				</animation>

				<!-- Select List -->
				<control type="fixedlist" id="54">
					<visible>
						Container.Content(episodes)			
					</visible>
			
					<posx>-338</posx>
				    <posy>60</posy>
					<width>1610</width>
					<height>300</height>

					<ondown>541</ondown>
					<onup>100</onup>
					<onleft>-</onleft>
					<onright>-</onright>

				    <viewtype label="Multiplex">list</viewtype>
				    <orientation>horizontal</orientation>
				    <scrolltime>200</scrolltime>
				    <focusposition>2</focusposition>
			
					<pagecontrol>541</pagecontrol>

					<itemlayout width="377" height="266">
						<control type="image">
							<posx>0</posx>
							<posy>252</posy>
							<width>364</width>
							<height>210</height>
							<info>ListItem.thumb</info>
							<texture flipy="true" diffuse="Zen/elements/multiplex/fanart/reflection_mask.png"/>
							<aspectratio scalediffuse="false" align="center" aligny="top">stretch</aspectratio>
						</control>
						<control type="image">
							<info>listitem.thumb</info>
							<posx>0</posx>
							<posy>52</posy>
							<width>364</width>
							<height>210</height>
							<info>ListItem.Property(fanart_image)</info>
							<texture diffuse="shared/fanart/thumb_mask.png"></texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<bordertexture border="6">shared/fanart/thumb_shadow.png</bordertexture>
							<bordersize>6</bordersize>
						</control>
					</itemlayout>
					<focusedlayout width="381" height="266">
						<control type="image">
							<animation effect="zoom" end="112" center="auto" time="120">Focus</animation>
					
							<posx>0</posx>
							<posy>52</posy>
							<width>368</width>
							<height>214</height>
							<info>listitem.thumb</info>
							<texture diffuse="shared/fanart/thumb_mask.png"></texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<bordertexture border="11">shared/fanart/thumb_focus_overlayv2.png</bordertexture>
							<bordersize>11</bordersize>
						</control>
					</focusedlayout>
				</control>

				<control type="fixedlist" id="54">
					<visible>
						!Window.IsActive(musicplaylist) + !Window.IsActive(musicfiles) + !Window.IsActive(musiclibrary)
						+ !Container.Content(albums) + !Container.Content(artists) + !Container.Content(songs)
						+ !Container.Content(episodes)			
					</visible>
			
					<posx>-45</posx>
				    <posy>60</posy>
					<width>1280</width>
					<height>300</height>

					<ondown>541</ondown>
					<onup>100</onup>
					<onleft>-</onleft>
					<onright>-</onright>

				    <viewtype label="Multiplex">list</viewtype>
				    <orientation>horizontal</orientation>
				    <scrolltime>200</scrolltime>
				    <focusposition>3</focusposition>
			
					<pagecontrol>541</pagecontrol>

					<itemlayout width="183" height="265">
						<control type="image">
							<posx>11</posx>
							<posy>250</posy>
							<width>170</width>
							<height>250</height>
							<info>ListItem.thumb</info>
							<texture flipy="true" diffuse="Zen/elements/multiplex/dvd/reflection_mask.png"/>
							<bordersize>6</bordersize>
							<aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
						</control>
						<control type="image">
							<posx>11</posx>
							<posy>12</posy>
							<width>170</width>
							<height>250</height>
							<info>ListItem.thumb</info>
							<texture diffuse="Zen/elements/cover/dvd/thumb_mask.png"></texture>
							<bordertexture border="6">Zen/elements/cover/dvd/thumb_shadow.png</bordertexture>
							<bordersize>6</bordersize>
							<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
						</control>
					</itemlayout>
					<focusedlayout width="183" height="265">
						<control type="image">
							<animation effect="zoom" end="117" center="auto" time="200">Focus</animation>
					
							<posx>11</posx>
							<posy>6</posy>
							<width>170</width>
							<height>250</height>
							<info>ListItem.thumb</info>
							<texture diffuse="Zen/elements/cover/dvd/thumb_mask.png"></texture>
							<bordertexture border="11">Zen/elements/cover/dvd/thumb_focus_overlay2.png</bordertexture>
							<bordersize>11</bordersize>
							<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
						</control>
					</focusedlayout>
				</control>
				<control type="fixedlist" id="54">
					<visible>
						Window.IsActive(musicplaylist) | Window.IsActive(musicfiles) | Window.IsActive(musiclibrary)
						| Container.Content(albums) | Container.Content(artists) | Container.Content(songs)
					</visible>
			
					<posx>-45</posx>
				    <posy>143</posy>
					<width>1280</width>
					<height>300</height>

					<ondown>541</ondown>
					<onup>100</onup>
					<onleft>-</onleft>
					<onright>-</onright>

				    <viewtype label="Multiplex">list</viewtype>
				    <orientation>horizontal</orientation>
				    <scrolltime>200</scrolltime>
				    <focusposition>3</focusposition>
			
					<pagecontrol>541</pagecontrol>

					<itemlayout width="183" height="177">
						<control type="image">
							<posx>11</posx>
							<posy>170</posy>
							<width>170</width>
							<height>170</height>
							<info>ListItem.thumb</info>
							<texture flipy="true" diffuse="Zen/elements/multiplex/album/reflection_mask.png"/>
							<bordertexture border="6"></bordertexture>
							<bordersize>6</bordersize>
							<aspectratio scalediffuse="true" align="center" aligny="top">keep</aspectratio>
						</control>
						<control type="image">
							<posx>11</posx>
							<posy>12</posy>
							<width>170</width>
							<height>170</height>
							<info>ListItem.thumb</info>
							<texture diffuse="Zen/elements/cover/album/thumb_mask.png"></texture>
							<bordertexture border="6">Zen/elements/cover/album/thumb_shadow.png</bordertexture>
							<bordersize>6</bordersize>
							<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
						</control>
					</itemlayout>
					<focusedlayout width="183" height="193">
						<control type="image">
							<animation effect="zoom" end="117" center="auto" time="200">Focus</animation>
							<posx>11</posx>
							<posy>12</posy>
							<width>170</width>
							<height>170</height>
							<info>ListItem.thumb</info>
							<texture diffuse="Zen/elements/cover/album/thumb_mask.png"></texture>
							<bordertexture border="11">Zen/elements/cover/album/thumb_focus_overlay.png</bordertexture>
							<bordersize>11</bordersize>
							<aspectratio scalediffuse="true" align="center" aligny="bottom">keep</aspectratio>
						</control>
					</focusedlayout>
				</control>
			</control>
			<!-- Scrollbar -->
			<control type="group">
				<visible allowhiddenfocus="true">Control.hasfocus(541)</visible>
					<animation type="Conditional" condition="Control.hasfocus(541)">
						<effect type="fade" end="100" time="200"/>
					</animation>
				<posy>630</posy>
				<posx>506.5</posx>
				<control type="image">
					<width>267</width>
					<height>26</height>
					<posy>0</posy>
					<texture>Zen/elements/common/scrollbar/scrollbar_bg_horizontal.png</texture>
				</control>
				<control type="scrollbar" id="541">
					<width>267</width>
					<height>26</height>
					<orientation>horizontal</orientation>
					<onup>50</onup>
					<onleft>501</onleft>
					<onright>501</onright>
					<ondown>101</ondown>
					<textureslidernib>Zen/elements/common/scrollbar/scrollbar_nib.png</textureslidernib>
					<textureslidernibfocus>Zen/elements/common/scrollbar/scrollbar_nib_focus.png</textureslidernibfocus>
				</control>
			</control>
		</control>
	</include>
</includes>