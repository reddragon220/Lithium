<includes>
	<include name="light_bg">
		<!-- No Container Light -->
		<control type="image">
			<visible>!Control.IsVisible(54)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<aspectratio>stretch</aspectratio>
			<texture>common/light_bg.png</texture>
			<fadetime>200</fadetime>
		</control>
	</include>
	<include name="dark_bg">
		<!-- No Container dark -->
		<control type="image">
			<visible>!Control.IsVisible(54)</visible>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<aspectratio>stretch</aspectratio>
			<texture>backgrounds/darkened_bg.png</texture>
			<fadetime>200</fadetime>
		</control>
	</include>
	
	<include name="center_bg">
		<control type="image">
			<width>1210</width>
			<height>556</height>
			<texture>Zen/panes/common/center_bg.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>
	</include>
	<include name="center_fg">
		<control type="image">
			<width>1210</width>
			<height>556</height>
			<texture>Zen/panes/common/center_gradient.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>
		<control type="image">
			<width>1210</width>
			<height>556</height>
			<texture>Zen/panes/common/center_outline.png</texture>
			<aspectratio>stretch</aspectratio> 
		</control>
	</include>

	<include name="direction_arrows">
		<control type="group">
			<visible>Skin.HasSetting(horizontal_scroll) + !control.isvisible(50) + !control.isvisible(51)</visible>
			<include>preferences_animation</include>
			<posy>336</posy>
			<animation type="Conditional" condition="Control.hasfocus(531) + Skin.HasSetting(horizontal_scroll)">
				<effect type="slide" end="0,-20" center="auto" time="200"/>
			</animation>
			<control type="image">
				<posx>7</posx>
				<width>48</width>
				<height>48</height>
				<texture>common/left_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<posx>1225</posx>
				<width>48</width>
				<height>48</height>
				<texture>common/right_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(horizontal_scroll) + !control.isvisible(58) + !control.isvisible(59)</visible>
			<include>preferences_animation</include>
			
			<control type="image">
				<posx>616</posx>
				<posy>612</posy>
				<posx>7</posx>
				<width>48</width>
				<height>48</height>
				<texture>common/down_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<posx>616</posx>
				<posy>60</posy>
				<width>48</width>
				<height>48</height>
				<texture>common/up_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
	</include>

	<include name="orientation_horizontal">
		<orientation>horizontal</orientation>
	</include>
	<include name="orientation_vertical">
		<orientation>vertical</orientation>
	</include>
	<include name="bay_horizontal">
		<posx>13</posx>
	</include>

	<include name="preferences_direction">
		<ondown>101</ondown>
	</include>

	<include file="ViewThumbList.xml"/>
	<include file="ViewFanart.xml"/>
	<include file="ViewCover.xml"/>
	<include file="ViewMultiplex.xml"/>
	<include file="ViewInfoThumbList.xml"/>
	
	<include file="ViewEpisodes.xml"/>
	<include file="ViewSongs.xml"/>	
	
	<include file="ViewShowCase.xml"/>
	<include file="ViewLowList.xml"/>
	<include file="ViewInfoLowList.xml"/>

</includes>