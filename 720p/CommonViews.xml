<includes>
	<include name="direction_arrows">
		<control type="group">
			<visible>Skin.HasSetting(horizontal_scroll) + !control.isvisible(50) + !control.isvisible(51) + !control.isvisible(58) + !Control.IsVisible(54)</visible>
			<include>preferences_animation</include>
			<include>no_header</include>
			<posy>336</posy>
			<animation type="Conditional" condition="Control.hasfocus(531) + Skin.HasSetting(horizontal_scroll)">
				<effect type="slide" end="0,-20" center="auto" time="200"/>
			</animation>
			<control type="image">
				<posx>7</posx>
				<width>48</width>
				<height>48</height>
				<texture>common/left_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<posx>1225</posx>
				<width>48</width>
				<height>48</height>
				<texture>common/right_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(horizontal_scroll) + !control.isvisible(50) + !control.isvisible(51) + !control.isvisible(58) + !Control.IsVisible(54)</visible>
			<include>preferences_animation</include>
			
			<control type="image">
				<posx>616</posx>
				<posy>612</posy>
				<posx>7</posx>
				<width>48</width>
				<height>48</height>
				<texture>common/down_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<include>no_header</include>
				<include>no_header</include>

				<posx>616</posx>
				<posy>60</posy>
				<width>48</width>
				<height>48</height>
				<texture>common/up_arrow.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
	</include>

	<include name="orientation_horizontal">
		<orientation>horizontal</orientation>
	</include>
	<include name="orientation_vertical">
		<orientation>vertical</orientation>
	</include>
	<include name="bay_horizontal">
		<posx>13</posx>
	</include>

	<include name="preferences_direction">
		<ondown>101</ondown>
	</include>

	<include name="no_header">
		<animation effect="slide" end="0,-26" time="0" condition="Skin.HasSetting(slide)">Conditional</animation>
	</include>

	<include file="ViewThumbList.xml"/>
	<include file="ViewFanart.xml"/>
	<include file="ViewCover.xml"/>
	<include file="ViewMultiplex.xml"/>
	<include file="ViewInfoThumbList.xml"/>
	
	<include file="ViewEpisodes.xml"/>
	<include file="ViewSongs.xml"/>	
	
	<include file="ViewShowCase.xml"/>
	<include file="ViewLowList.xml"/>
	<include file="ViewInfoLowList.xml"/>

</includes>