								<posy>48</posy>
								<width>762</width>
								<height>2</height>
								<texture>Zen/elements/episode/divider.png</texture>
								<aspectratio>stretch</aspectratio> 
							</control>
						</focusedlayout>
					</control>
				</control>
				<!-- Scrollbar -->
				<control type="group">
					<visible>!Skin.HasSetting(horizontal_scroll)</visible>
					<posy>155</posy>
					<posx>1165</posx>
					<control type="image">
						<width>26</width>
						<height>267</height>
						<posy>7</posy>
						<texture>Zen/elements/common/scrollbar/scrollbar_bg.png</texture>
